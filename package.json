{
  "name": "@pluraal/pluraal",
  "version": "1.0.0",
  "description": "A lean TypeScript MCP server implementation",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "pluraal": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:elm": "elm make src/Pluraal/Language.elm --output=NUL",
    "build:all": "npm run typecheck && npm run build && npm run build:elm && npm run lint && npm run test && npm run test:elm",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "vitest run",
    "test:elm": "npx elm-test",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "elm:install": "elm install",
    "elm:repl": "elm repl"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.8",
    "elm": "^0.19.1-6",
    "elm-test": "^0.19.1-revision12",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "build"
  ]
}
